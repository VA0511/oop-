
import java.util.Scanner;

public class DaysinMonth {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int year = 0;
        int month = 0;

        while(true) {
            System.out.println("Enter a year: ");
            if(scanner.hasNextInt()) {
                year = scanner.nextInt();
                if(year > 0) {
                    break;
                } else {
                    System.out.println("Invalid year");
                    scanner.next();
                }
            }
        }

        scanner.nextLine();

        while(true) {
            System.out.println("Enter a month: ");
            String monthInput = scanner.nextLine().trim();

            month = MonthNumber(monthInput);

            if(month > 0) {
                break;
            } else {
                System.out.println("Invalid month");
            }
        }

        int days = getDaysInMonth(month, year);
        System.out.println("Number of days: " + days);

        scanner.close();
    }

    private static int MonthNumber(String monthInput) {
        switch(monthInput.toLowerCase()) {
            case "January":
            case "Jan":
            case "jan":
            case "1":
                return 1;
            case "February":
            case "Feb":
            case "feb":
            case "2":
                return 2;
            case "March":
            case "Mar":
            case "mar":
            case "3":
                return 3;
            case "April":
            case "Apr":
            case "apr":
            case "4":
                return 4;
            case "May":
            case "5":
                return 5;
            case "June":
            case "Jun":
            case "jun":
            case "6":
                return 6;
            case "July":
            case "Jul":
            case "jul":
            case "7":
                return 7;
            case "August":
            case "Aug":
            case "aug":
            case "8":
                return 8;
            case "September":
            case "Sep":
            case "sep":
            case "9":
                return 9;
            case "October":
            case "Oct":
            case "oct":
                return 10;
            case "November":
            case "Nov":
            case "nov":
            case "11":
                return 11;
            case "December":
            case "Dec":
            case "dec":
            case "12":
                return 12;
            default:
                return -1;
        }
    }

    private static int getDaysInMonth(int month, int year) {
        switch(month) {
            case 1:
            case 3:
            case 5:
            case 7:
            case 8:
            case 10:
            case 12:
                return 31;
            case 4:
            case 6:
            case 9:
            case 11:
                return 30;
            case 2:
                if(LeapYear(year)) {
                    return 29;
                } else {
                    return 28;
                }
            default:
                return -1;
        }
    }

    private static boolean LeapYear(int year) {
        if(year % 4 == 0) {
            if(year % 100 == 0) {
                return year % 400 == 0;
            } else {
                return true;
            }
        } else {
            return false;
        }
    }
}
